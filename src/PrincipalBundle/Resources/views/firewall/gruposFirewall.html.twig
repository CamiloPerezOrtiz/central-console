<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Groups
                </h1>
            </div>
        </div>
        <div class="row">
            {% for grupos in grupo %}
                <div class="col-lg-3 col-md-6">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-xs-3">
                                    <i class="fa fa-fw fa-list fa-4x"></i>
                                </div>
                                <div class="col-xs-9 text-right">
                                    <div class="huge">
                                        <h4> {{ grupos.nombre }} </h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <a href="{{ path('registroFirewallWan',{ id:grupos.nombre }) }}">
                            <div class="panel-footer">
                                <span class="pull-left">Register Firewall WAN</span>
                                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                                <div class="clearfix"></div>
                            </div>
                        </a>
                        <a href="{{ path('listaAcl',{ id:grupos.nombre }) }}">
                            <div class="panel-footer">
                                <span class="pull-left">List Firewall</span>
                                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                                <div class="clearfix"></div>
                            </div>
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
