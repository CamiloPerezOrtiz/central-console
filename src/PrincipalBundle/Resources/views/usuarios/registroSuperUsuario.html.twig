{% include '@Principal/plantillas/declaracionCabezera.html.twig' %}
{% include '@Principal/plantillas/cuerpo.html.twig' %}
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Accoun super users</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Accoun
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            {# Mensaje a pantalla de notificacion de algun error #}
                                <div class="container">
                                    <div class="col-md-12">
                                        {% for msg in app.session.flashbag().get('estatus') %}
                                            <div class="alert alert-info" aria-label="Close">
                                                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                                <strong>Info!</strong> {{ msg }}
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            {# Fin de Mensaje #}
                            <div class="col-lg-1">
                            </div>
                            <div class="col-lg-9">
                                {{ form_start(form, {'attr': {'onsubmit':'return validarUsuario();'} } ) }}
                                    <br>
                                    <div class="form-group row">
                                        <div class="col-md-6">
                                            {{ form_label(form.nombre) }}
                                            {{ form_widget(form.nombre, { 'id': 'nombre' }) }}
                                            <span class="text-danger">{{ form_errors(form.nombre) }}</span>
                                        </div>
                                        <div class="col-md-6">
                                            {{ form_label(form.apellidos) }}
                                            {{ form_widget(form.apellidos) }}
                                            <span class="text-danger">{{ form_errors(form.apellidos) }}</span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        {{ form_label(form.email) }}
                                        {{ form_widget(form.email, { 'id': 'email' }) }}
                                        <span class="text-danger">{{ form_errors(form.email) }}</span>
                                    </div>
                                    <div class="form-group">
                                        {{ form_label(form.password.first) }}
                                        {{ form_widget(form.password.first, { 'id': 'passwordUno' }) }}
                                        <span class="text-danger">{{ form_errors(form.password.first) }}</span>
                                    </div>
                                    <div class="form-group">
                                        {{ form_label(form.password.second) }}
                                        {{ form_widget(form.password.second, { 'id': 'passwordDos' }) }}
                                        <span class="text-danger">{{ form_errors(form.password.second) }}</span>
                                    </div>
                                    <div class="form-group">
                                        {{ form_widget(form.Save) }}
                                    </div>
                                    <div class="form-group">
                                        {{ form_widget(form.Clear) }}
                                    </div>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% include '@Principal/plantillas/declaracionPiePagina.html.twig' %}
<script src="{{ asset ('js/jsPagina/usuarios/validarUsuario.js') }}"></script>
<script>
    window.setTimeout(function() {
        $(".alert").fadeTo(500, 0).slideUp(500, function(){
            $(this).remove(); 
        });
    }, 4000);
</script>
{% include '@Principal/plantillas/declaracionFin.html.twig' %}