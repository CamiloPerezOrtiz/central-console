{% include '@Principal/plantillas/declaracionCabezera.html.twig' %}
{% include '@Principal/plantillas/cuerpo.html.twig' %}
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Choose a group to get more information</h1>
            </div>
        </div>
        <div class="row">
            <form method="post">
                <div class="col-md-6">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            Choose the group
                        </div>
                        <div class="panel-body small">
                            <div class="form-row">
                                <div class="col-md-12">
                                    {% for msg in app.session.flashbag().get('estatus') %}
                                        <div class="alert alert-info" aria-label="Close">
                                            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                            <strong>Info!</strong> {{ msg }}
                                        </div>
                                    {% endfor %}
                                </div>
                                <div class="form-group">
                                    <select class="form-control" name="ubicacion">
                                        {% for grupo in ipGrupos %}
                                            <option value="{{ grupo.descripcion }}">{{ grupo.descripcion }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                                <div class="form-group">
                                    <button class="btn btn-success btn-sm" name="solicitar" type="submit">Consult</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            Instructions
                        </div>
                        <div class="panel-body small">
                            Select the name of the device. <br><br>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
{% include '@Principal/plantillas/declaracionPiePagina.html.twig' %}
