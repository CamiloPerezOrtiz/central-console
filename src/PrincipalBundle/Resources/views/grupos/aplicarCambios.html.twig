{% include '@Principal/plantillas/declaracionCabezera.html.twig' %}
{% include '@Principal/plantillas/cuerpo.html.twig' %}
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <h1 class="page-header">Table IP</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <form method="post" class="role">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            Table public IP
                        </div>
                        <div class="panel-body">
                            <div class="table-responsive">     
                                <button class="btn btn-success" name="enviar" type="submit">Save</button>
                                <br><br>
                                <table class="table table-striped table-bordered table-hover small" id="dataTables-example">
                                    <thead class="bg-dark text-white">
                                        <tr>  
                                            <th>Description</th>       
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for grupo in grupos %}
                                            <tr>
                                                <td>
                                                    <input type="checkbox" class="form-check-input" name="ip[]" value="{{ grupo.descripcion }}" checked>
                                                    {{ grupo.descripcion }}
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-md-6">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        Instructions
                    </div>
                    <div class="panel-body small">
                        <p>Select the IP to which you want to apply the change.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
