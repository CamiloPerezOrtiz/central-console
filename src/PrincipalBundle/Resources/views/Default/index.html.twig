	<!DOCTYPE html>
	<html lang="es">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="">
        <meta name="author" content="">
        <title>Login Warriors Lab's</title>
    	<!-- Hoja de estilos de bootstrap -->
        <link href="{{ asset ('vendor/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">
        <!-- Hoja de estilos para los iconos del sistema -->
        <link href="{{ asset ('vendor/fontawesome-free/css/all.min.css') }}" rel="stylesheet" type="text/css">
        <!-- Hoja de estilos del diseño del sistema -->
        <link href="{{ asset ('css/login.css') }}" rel="stylesheet">
        <link rel="icon" type="image/x-icon" href="{{ asset('log.ico') }}" />
    </head>
    <body style="background-image: url('../img/im2.jpg');">
		<div class="container content-wrapper">
			<br>
			<div class="container">
				<img src="{{ asset ('img/log.png') }}" class="img-fluid mx-auto d-block"> 
			</div>
			{% if error %}
				<div class="col-md-4 mx-auto ">
	      			<div class="alert alert-danger" aria-label="Close">
	                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
	                    <strong>{{ error.messageKey|trans(error.messageData, 'security') }}</strong>
	                </div>
	            </div>
			{% endif %}
			<div class="container">
                <div class="col-md-12">
                    {% for msg in app.session.flashbag().get('estatus') %}
                        <div class="alert alert-info" aria-label="Close">
                            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                            <strong>Info!</strong> {{ msg }}
                        </div>
                    {% endfor %}
                </div>
            </div>
			{# Mensaje a pantalla de notificacion de algun error #}
	    	<div class="card card-login mx-auto mt-5 text-center">
	      		<div class="card-header"><h3><i class="fas fa-sign-in-alt"></i> Login</h3></div>
	      		<div class="card-body">
		        	<form action="{{path('login_check')}}" method="post" onsubmit="return validarLogin();" name="login">
		        		<!-- Inicio Email -->
		        			<div class="form-group">
			            		<label>Email address</label>
			          		</div>
		        			<div class="input-group mb-3">
						      	<div class="input-group-prepend">
							        <span class="input-group-text"><i class="fas fa-envelope"></i></span>
						      	</div>
						      	<input type="email" id="username" required="required" name="_username" placeholder="Enter your email"  value="{{ last_username }}" class="form-control"/>
						    </div>
			          	<!-- Fin Email  -->
			          	<!-- Inicio Password  -->
			          		<div class="form-group">
			            		<label>Password</label>
			            	</div>
			          		<div class="input-group mb-3">
						      	<div class="input-group-prepend">
							        <span class="input-group-text"><i class="fas fa-unlock-alt"></i></span>
						      	</div>
						      	<input type="password" id="password" required="required" placeholder="Enter your password" name="_password" class="form-control"/>
			          		</div>
			          	<!-- Fin password  -->
			          	<!-- Inicio Botones  -->
			          		<div class="form-group">
								<input type="submit" value="Enter" class="btn btn-success btn-block"/>
								<input type="hidden" name="_target_path" value="/validacionLogin"/>
							</div>
						<!-- Fin botones -->
		        	</form>
	      		</div>
	    	</div>
	  	</div>
	    <!-- Javascript -->
	    <script src="{{ asset ('vendor/jquery/jquery.min.js') }}"></script>
	    <script src="{{ asset ('vendor/bootstrap/js/bootstrap.bundle.min.js') }}"></script>
	    <script src="{{ asset ('js/sweetalert.min.js') }}"></script>
	    <script>
	        window.setTimeout(function() {
	            $(".alert").fadeTo(5000, 0).slideUp(500, function(){
	                $(this).remove(); 
	            });
	        }, 4000);
	    </script>
    </body>
    <footer class="footer">
	    <div class="container text-center">
	        <span>Warriors lab's <sup>©</sup> Todos los Derechos Reservados.</span>
	    </div>
	</footer>
	</html>
{% endif %}